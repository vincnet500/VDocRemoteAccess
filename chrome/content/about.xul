<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://vdocremoteaccess/skin/style.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://vdocremoteaccess/locale/about.dtd">

<prefwindow xmlns:html="http://www.w3.org/1999/xhtml" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" title="&about.title;" id="vra-about">
	<prefpane id="vra-prefpane">
		
        <script type="application/javascript" src="chrome://vdocremoteaccess/content/system.js" />
        <script type="application/javascript" src="chrome://vdocremoteaccess/content/about.js" />
        
        <box id="vra-header">
			<text value="VDoc Remote Access" />
		</box>
        
        <box id="vra-subheader">
			<description>
			&about.information;
			</description>
		</box>
        
        <box id="vra-about-topbox" orient="vertical">
			<description>
			&about.version;
			</description>
        </box>
        
        <box orient="vertical">
			<description>
			&about.createdBy;
			</description>
        </box>
        
        <box orient="vertical">
			<description>
			&about.contributors;
			</description>
        </box>
		
        <box id="vra-footer">
		</box>
        
        <hbox align="right">
            <button oncommand="window.close();">
              <description>&about.buttonClose;</description>
            </button>
		</hbox>
		
	</prefpane>
</prefwindow>